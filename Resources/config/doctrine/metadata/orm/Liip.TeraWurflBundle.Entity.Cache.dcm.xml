<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                 http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Liip\TeraWurflBundle\Entity\Cache" table="terawurfl_cache">

        <id name="userAgent" column="user_agent" type="string" length="255">
        </id>

        <field name="cacheData" column="cache_data" type="text" nullable="false" />

        <indexes>
            <index name="user_agent_idx" columns="user_agent" />
        </indexes>

    </entity>

</doctrine-mapping>
